<div class="col-md-6 col-md-offset-3">
	<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal do |f| %>

	  <%= devise_error_messages! %>
		<div class="jumbotron">
			<h3>Sign up</h3>
			<%= f.email_field :email %>
			<%= f.password_field :password %>
			<div class="form-group">
		  	<div class="col-sm-offset-3 col-sm-9">
					<%= submit_tag "Sign up", :class => "btn btn-primary btn-large" %>
				  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default" %>
			  </div>
			</div>
		</div>
	<% end %>
</div>
