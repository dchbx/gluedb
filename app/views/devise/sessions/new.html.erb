<div class="col-md-6 col-md-offset-3">
	<%= form_for resource, :as => resource_name, :url => session_path(resource_name), layout: :horizontal  do |f| %>

		<div class="jumbotron">
		  <div class='panel-body'><h3>Please sign in</h3></div>
			<%= f.email_field :email %>
			<%= f.password_field :password %>
			<%= f.check_box :remember_me, data: {toggle: :checkbox} if devise_mapping.rememberable? %>
	  	<div class="form-group">
		  	<div class="col-md-offset-3 col-md-9">
			  	<%= submit_tag "Sign In", class: "btn btn-primary" %>
			  	<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
			  	<%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default" %>
				</div>
			</div>
		</div>
	<% end %>
</div>
