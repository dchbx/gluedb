<div class="col-md-5 col-md-offset-3">

	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, layout: :horizontal) do |f| %>
	  <%= devise_error_messages! %>
		<div class="jumbotron">
		  <div class='panel-body'><h3>Forgot your password?</h3></div>
			<%= f.email_field :email, :label => false, :placeholder => "Email address", :input_html => {:class => 'input-xlarge' } %>

		  <div class="form-group">
		  	<div class="col-md-offset-3 col-md-9">
			  	<%= submit_tag "Send password reset", :class => "btn btn-primary" %>
				  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default" %>
				  <div class="clearfix visible-xs-block"></div>
			  	<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
		  	</div>
			</div>
		</div>
	<% end %>
</div>
