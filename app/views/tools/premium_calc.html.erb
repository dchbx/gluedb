<ul class="breadcrumb">
  Tools
</ul>

<div class='col-md-offset-1 col-md-10'>
  <h4>Premium Calculator</h4>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <span class="fui-tag">&nbsp;</span>
        Calculate Premium
      </h3>
    </div>

    <div class="panel-body">
      <%= form_tag calculate_premium_carriers_path, method: :post, remote: true do %>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-2 text-center">
              <%= label_tag "Select Carrier" %>
            </div>
            <div class="col-sm-3">
              <%= select_tag "carriers", options_from_collection_for_select(@carriers, "id", "name"), prompt: "Nothing Selected", class: "select select-primary", data: { toggle: "select"} =%>
            </div>
          </div>

          <div class="row">
            <br>
            <div class="col-sm-2 text-center">
              <%= label_tag "Select Plan Year"%>
            </div>
            <div class="col-sm-3">
              <%= select_tag "plan-years", {prompt: "Nothing Selected"}, class: "select select-primary" =%>
            </div>
          </div>

          <div class="row">
            <br>
            <div class="col-sm-2 text-center">
              <%= label_tag "Select Plan"%>
            </div>
            <div class="col-sm-3">
              <%= select_tag "plans", {}  ,class: "select select-primary" =%>
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-sm-2 text-center">
              <%= label_tag :rate_period_date %>
            </div>
            <div class="col-sm-3">
              <div class="input-group">
                <span class="input-group-btn">
                  <button class="btn" type="button"><span class="fui-calendar"></span></button>
                </span>
                <%= text_field_tag :rate_period_date, @rate_period_date, class: "form-control date_picker" %>
              </div>
            </div>
          </div>

          <br>
          <div class="row">
            <div class="col-sm-2 text-center">
              <%= label_tag :benefit_begin_date %>
            </div>
            <div class="col-sm-3">
              <div class="input-group">
                <span class="input-group-btn">
                  <button class="btn" type="button"><span class="fui-calendar"></span></button>
                </span>
                <%= text_field_tag :benefit_begin_date, @benefit_begin_date, class: "form-control date_picker" %>
              </div>
            </div>
          </div>

          <br>
          <div class="row">
            <div class="col-sm-2 text-center">
              <%= label_tag :birth_date %>
            </div>
            <div class="col-sm-3  ">
              <div class="input-group">
                <span class="input-group-btn">
                  <button class="btn" type="button"><span class="fui-calendar"></span></button>
                </span>
                <%= text_field_tag :birth_date, @birth_date, class: "form-control date_picker" %>
              </div>
            </div>
          </div>

          <br>
          <div class="col-sm-offset-1 col-sm-2 text-center">
            <%= submit_tag "Calculate", { :class => "btn btn-primary" } %>
          </div>
        </div>
      <% end %>

      <h5 id='rate-result'>Result: $0.00</h5>

    </div>
  </div>

</div>
