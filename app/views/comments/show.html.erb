<%= form_for [@commentable, @comment], layout: :basic do |f| %>
  <div class="col-md-12">
    <%= f.text_field :content, placeholder: 'Comment', label: "Last edited by: #{@comment.user} on: #{@comment.updated_at.strftime("%m-%d-%Y %I:%M:%S %p")}" %>
    <%= f.hidden_field :commentable, value: @commentable.class %>
    <%= f.hidden_field :commentable_id, value: @commentable.id %>
  </div>
  <div class="col-md-2">
    <%= f.submit 'Edit' %>
    <%= f.select :priority, Comment::PRIORITY_TYPE, {}, :class => 'form-control select select-primary' %>
  </div>
<% end %>
