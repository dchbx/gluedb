<div class="form-inputs">
	<fieldset>
		<%= f.select :email_type,  Email::TYPES, {include_blank: "Type"}, { class: "select select-primary", data: { toggle: "select"}, disabled: true } %>
		<%= f.text_field :email_address, as: :email, placeholder: "name@example.com", disabled: true %>
		<%= link_to '<span class="fui-cross-circle"> Delete Email</span>'.html_safe, '#', :class => "remove_fields text-danger", disabled: true %>
		<%= f.hidden_field :_destroy %>
	</fieldset>
</div>
